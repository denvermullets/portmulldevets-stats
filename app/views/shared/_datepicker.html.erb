<div class="flex flex-col pb-8 md:justify-end md:flex-row ">
  <%= form_with url: form_url, method: :get, data: { controller: "date-range", action: "submit->date-range#updateTable" }, class: 'space-x-4' do |form| %>
    <div class='flex flex-row items-start justify-center gap-4 space-x-4 md:gap-0'>
      <div class='flex flex-col items-start justify-start space-y-2 md:space-x-4 md:flex-row md:items-center md:space-y-0 '>
        <%= form.label :start_date, "Start Date" %>
        <%= form.date_field :start_date, value: (params[:start_date] || 30.days.ago.to_date), class: "border border-gray-300 rounded p-2" %>
      </div>
      <div class='flex flex-col items-start justify-start space-y-2 md:space-x-4 md:flex-row md:items-center md:space-y-0'>
        <%= form.label :end_date, "End Date", class: '' %>
        <%= form.date_field :end_date, value: (params[:end_date] || Date.today), class: "border border-gray-300 rounded p-2" %>
      </div>
      <div class='flex-col hidden md:flex-row md:flex '>
        <%= form.submit "Update Results", class: "px-3 py-2 text-gray-700 border text-vaz-blue rounded-md bg-vaz-beige border-vaz-blue hover:bg-vaz-blue hover:text-vaz-beige cursor-pointer" %>
      </div>
    </div>
    <div class='flex-row block mt-4 md:hidden'>
      <%= form.submit "Update Results", class: " w-full px-3 py-2 text-gray-700 border text-vaz-blue rounded-md bg-vaz-beige border-vaz-blue hover:bg-vaz-blue hover:text-vaz-beige cursor-pointer" %>
    </div>
  <% end %>
</div>